<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="co.touchlab.magicthreadsdemo" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".LoaderDemoActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".TaskDemoActivity"
            android:label="@string/title_activity_task_demo" >
        </activity>
        <activity
            android:name=".OptionsActivity"
            android:label="@string/title_activity_options" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DoubleTapLoaderDemoActivity"
            android:label="@string/title_activity_double_tap_loader_demo" >
        </activity>
    </application>

</manifest>
